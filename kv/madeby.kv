#:set scr3_txt 0.2   # rapid change button text size, size_hint height everywhere
#:set scr3_lbl 0.1    # rapid change button text size, size_hint height everywhere


<MadeByBox>:
    MDCard:
        id: programmer
        # on_pre_enter: 
        size_hint: 0.95, 0.8
        pos_hint: {"center_x": 0.5, "top": 0.9}
        elevation: 25
        padding: 0.02 * self.height
        spacing:  0.02 * self.height
        radius: 20
        orientation: 'vertical'
        line_color: (0, 0, 0, 1)
    
        MDLabel:
            markup: True
            text: "Used technologie:"    
            halign: "center"
            pos_hint: {'center_x': .5, 'top': 1}
            size_hint: 0.95, 0.1
            font_size: 0.5 * self.height
    
        MDGridLayout:
            id: madeby_grid
            size_hint: (0.9,  0.9)
            pos_hint: {'center_x': .5, 'top': 1}
            value: 0
            cols: 2
            padding: 10
            spacing: 10
    
            Image:
                size_hint: 0.5, 1
                source: "images/kivy.png"
            MDLabel:
                text: "[b]KivyMD[/b]\n [ref=https://kivymd.readthedocs.io/en/1.0.2/getting-started/]https://kivymd.readthedocs.io/[/ref]"    
                markup: True
                halign: "left"
                size_hint: 0.95, scr3_lbl * self.height
                font_size: 1 * scr3_txt * self.height
                on_ref_press:
                    import webbrowser
                    webbrowser.open(args[1])
                    
    
            Image:
                size_hint: 0.5, 1
                source: "images/python.png"
            MDLabel:
                text: "[b]Python[/b]\n [ref=https://www.python.org]https://www.python.org/[/ref]"        
